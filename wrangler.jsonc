	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "04-com-patraldo",
	"main": ".svelte-kit/cloudflare/_worker.js",
	"compatibility_date": "2025-08-05",
	"assets": {
		"binding": "ASSETS",
		"directory": ".svelte-kit/cloudflare"
	},
	"observability": {
		"enabled": true
	},
	"vars": {
                "MAILGUN_DOMAIN": "patraldo.com",
	       	"CONTACT_EMAIL": "contact@patraldo.com",
	       	"MAILGUN_FROM_EMAIL": "noreply@patraldo.com"
        },
        "d1_databases": [
                {
                        "binding": "DB",
                        "database_name": "subscribers-db2",
                        "database_id": "b6b5e993-f16e-4346-83b2-babfd327a023"
                }
        ],
	"triggers": {
                "crons": [
                        "0 9 * * 1"
                ]

	}
        /**
         * Note: Set MAILGUN_API_KEY as a secret using:
         * wrangler secret put MAILGUN_API_KEY
